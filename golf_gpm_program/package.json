{
  "name": "PandoP",
  "version": "0.19.1",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.pandop.hooking",
    "productName": "PandoP",
    "artifactName": "${productName}-${version}-Setup.${ext}",
    "asar": true,
    "files": [
      "index.html",
      "src/**/*",
      "assets/**",
      "package.json"
    ],
    "extraFiles": [
      ".env"
    ],
    "extraResources": [
      { "from": "resources/python", "to": "python" },
      { "from": "logs", "to": "logs" },
      { "from": "assets/tray.ico", "to": "assets/tray.ico" },
      { "from": "assets/icons/판도P-ICON.ico", "to": "assets/icons/판도P-ICON.ico" }
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/판도P-ICON.ico",
      "publisherName": "PandoP",
      "legalTrademarks": "© 2025 PandoP"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "PandoP"
    }
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "dotenv": "^17.2.0",
    "electron-store": "^10.0.1",
    "express": "^5.1.0",
    "puppeteer": "^24.9.0"
  }
}
