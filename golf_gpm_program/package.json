{
  "name": "golf-gpm-program",
  "version": "1.0.0",
  "description": "GPM 예약 자동화",
  "author": "고 승현",
  "main": "src/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.gpm.reservation",
    "productName": "GPMReservation",
    "copyright": "Copyright © 2025 고 승현",
    "publisherName": "고 승현",
    "files": [
      "index.html",
      "src/**/*",
      "logs/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GPMReservation"
    },
    "mac": {
      "publish": null
    }
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "electron-store": "^10.0.1",
    "puppeteer": "^24.9.0"
  }
}
