{
  "name": "PandoP",
  "version": "0.17.0",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "productName": "PandoP",
    "asar": true,
    "files": [
      "index.html",
      "src/**/*",
      "logs/**/*",
      "assets/icons/판도P-ICON.ico",
      "package.json"
    ],
    "extraFiles": [
      ".env"
    ],
    "extraResources": [
      { "from": "resources/python", "to": "python" },
      { "from": "logs", "to": "logs" }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/판도P-ICON.ico",
      "publisherName": "PandoP",
      "legalTrademarks": "© 2025 PandoP"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "PandoP"
    }
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "dotenv": "^17.2.0",
    "electron-store": "^10.0.1",
    "express": "^5.1.0",
    "puppeteer": "^24.9.0"
  }
}
