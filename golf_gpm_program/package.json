{
  "name": "golf-gpm-program",
  "version": "0.10.0",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "asar": true,
    "files": [
      "index.html",
      "src/**/*",
      "logs/**/*",
      "assets/icons/icon.ico",
      "package.json"
    ],
    "extraFiles": [
      ".env"
    ],
    "extraResources": [
      { "from": "resources/python", "to": "python" }
    ],
    "directories": { "output": "dist" },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico",
      "publisherName": "PandoP",
      "legalTrademarks": "Â© 2025 PandoP"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PandoP"
    }
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "dotenv": "^17.2.0",
    "electron-store": "^10.0.1",
    "express": "^5.1.0",
    "puppeteer": "^24.9.0"
  }
}
